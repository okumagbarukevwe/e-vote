<%- include("./partials/headerDashboard.ejs") %>

                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <h1 class="h3 mb-4 text-gray-800"><b>User Details</b></h1>
                    <br>
                    <form action="/dashboard/userdetails/<%= user._id %>?_method=PUT" method="POST">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="card mb-4 py-3 border-left-success">
                                <div class="card-body">
                                    <center><h3>Username</h3></center>
                                    <center><input style="margin-top: 15px; width: 400px; text-align: center; outline-color: #3498db;" type="text" name="username" value="<%= user.username %>"></center>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="card mb-4 py-3 border-left-warning">
                                <div class="card-body">
                                    <center><h3>Email</h3></center>
                                    <center><input style="margin-top: 15px; width: 400px; text-align: center; outline-color: #3498db;" type="text" name="email" value="<%= user.email %>"></center>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="card mb-4 py-3 border-left-info">
                                <div class="card-body">
                                    <center><h3>Full Name</h3></center>
                                    <center><input style="margin-top: 15px; width: 350px; text-align: center; outline-color: #3498db;" type="text" name="fullName" value="<%= user.fullName %>"></center>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="card mb-4 py-3 border-left-info">
                                <div class="card-body">
                                    <center><h3>Change Password</h3></center>
                                    <center><button style="width: 232px; margin-top: 5px; margin-bottom: 0px; font-size: 12px;" class="general-btn"><a href="#">Change Password</a></button></center>
                                </div>
                            </div>
                        </div>
                    </div>
                    <center><button style="width: 132px; margin-top: 30px; margin-bottom: 30px; font-size: 12px;" class="general-btn">Save</button></center>
                    </form>
                    

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->
<%- include("./partials/footerDashboard.ejs") %>